{
  "name": "shopify-f2021-a",
  "version": "1.0.0",
  "private": true,
  "main": "start.js",
  "repository": "https://github.com/aMahanna/shopify-F2021-A",
  "author": "Anthony Mahanna",
  "license": "MIT",
  "dependencies": {
    "arangojs": "^7.5.0",
    "express": "4.17.1",
    "http": "^0.0.1-security",
    "node-fetch": "^2.6.1",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@types/arangodb": "^3.5.11",
    "@types/color-namer": "^1.3.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@types/node-fetch": "^2.5.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "color-namer": "^1.4.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fs": "^0.0.1-security",
    "jest": "26.6.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "start": "node dist/start.js",
    "dev": "concurrently \"yarn run server:dev\" \"yarn run client:start\"",
    "client:install": "cd client && yarn install",
    "client:build": "cd client && yarn build",
    "client:start": "cd client && yarn start",
    "client:test": "cd client && yarn test",
    "server:dev": "concurrently \"yarn run watch:build\" \"yarn run watch:server\"",
    "watch:build": "tsc --watch",
    "watch:server": "NODE_ENV=test nodemon ./dist/start.js --watch ./dist",
    "db:clear": "tsc && node dist/src/scripts/clear.js",
    "db:onboard": "tsc && node dist/src/scripts/onboard.js",
    "db:restore": "tsc && node dist/src/scripts/restore.js",
    "db:populate": "tsc && node dist/src/scripts/populate.js",
    "clean": "rimraf dist",
    "build": "tsc",
    "postinstall": "tsc",
    "test": "jest && yarn client:install && yarn client:test",
    "heroku-postbuild": "yarn run client:install && yarn run client:build",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write && cd client && yarn prettier",
    "lint": "eslint . --ext .ts && cd client && yarn lint",
    "lint:fix": "eslint . --ext .ts --fix && cd client && yarn lint:fix"
  },
  "engines": {
    "node": "^15.5.0",
    "yarn": "^1.22.4"
  }
}
