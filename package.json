{
  "name": "shopify-f2021-a",
  "version": "1.0.0",
  "private": true,
  "main": "server.js",
  "repository": "https://github.com/aMahanna/shopify-F2021-A",
  "author": "Anthony Mahanna",
  "license": "MIT",
  "dependencies": {
    "arangojs": "^7.5.0",
    "express": "4.17.1",
    "http": "^0.0.1-security",
    "node-fetch": "^2.6.1",
    "picsum-photos": "^3.0.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "client:install": "cd client && yarn install",
    "client:start": "cd client && yarn start",
    "client:build": "cd client && yarn build",
    "client:test": "cd client && yarn test",
    "server:dev": "concurrently \"yarn run watch:build\" \"yarn run watch:server\"",
    "watch:build": "tsc --watch",
    "watch:server": "NODE_ENV=test nodemon ./dist/server.js --watch ./dist",
    "start": "node dist/server.js",
    "dev": "concurrently \"yarn run server:dev\" \"yarn run client:start\"",
    "heroku-postbuild": "yarn run client:install && yarn run client:build",
    "clean": "rimraf dist",
    "build": "tsc",
    "postinstall": "tsc",
    "picsum": "node dist/src/scripts/picsum.js",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "engines": {
    "node": "^15.5.0",
    "yarn": "^1.22.10"
  }
}
